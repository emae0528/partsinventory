<h1>Members</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Handle</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.handle %></td>
        <td>
          <%= link_to "Delete", member_path(member.id), :method => :delete, confirm: "Are you sure?" %>
          <%= link_to "Edit", edit_member_path(member.id) %>
          </td>
      </tr>
    <% end %> 
  </tbody>
</table>
